@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<body class="authorization">

    <!-- NAV + TOP PART OF PAGE -->
    <div class="background-img-container">
        <div class="background-img">
            <section class="authorization-header">
                <!-- NAV -->
                <section id="nav-bar-auth" class="nav-bar">
                    <div class="container">
                        <div class="nav">
                            <div class="logo col-sm-12 col-md-5 col-lg-2">
                                <h1><a asp-controller="Places" asp-action="index">Restaurator</a></h1>
                            </div>
                            <div class="nav-menu col-sm-12 col-md-6 col-lg-4">
                                <ul>
                                    <li><a  asp-controller="Places" asp-action="index">Home</a></li>
                                    <li><a  asp-controller="Register" asp-action="index">Register</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- NAV -->

                <div class="margin-300"></div>

                <!-- PAGE TOP HEADING -->
                <div class="authorization-heading">
                    <h1>Sign In</h1>
                </div>
                <!-- PAGE TOP HEADING -->
            </section>
        </div>
    </div>
    <!-- NAV + TOP PART OF PAGE -->
    <!-- AUTHENTICATION PANEL -->
    <div class="authentication-form">
        <div class="container">
            <div class="form-container col-lg-6 col-md-8 col-sm-12">
                <form asp-action="login" asp-controller="Login" method="post" enctype="multipart/form-data">
                    <h5>Welcome back, dear customer!</h5>
                    <div class="form-group">
                        <input type="email" asp-for="Email" class="form-control" placeholder="Email address">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-btn">
                        <button type="submit" class="btn btn-primary">Log In</button>
                    </div>
                    <p class="form-text">Do not have an account? <a href="./register.html">Register here!</a></p>
                </form>
            </div>
        </div>
    </div>
    <!-- AUTHENTICATION PANEL -->
    <!-- FOOTER -->
    <footer>
        <div class="container">
            <div class="footer-content col-lg-12">
                <div class="logo col-sm-12 col-md-5 col-lg-4">
                    <h1><a asp-controller="Places" asp-action="index">Restaurator</a></h1>
                </div>
                <div class="footer-text col-sm-12 col-md-5 col-lg-4">
                    <h6>Baku, Azerbaijan</h6>
                </div>
                <div class="footer-menu col-sm-12 col-md-12 col-lg-4">
                    <ul>
                        <li><a asp-controller="Places" asp-action="index">Home</a></li>
                        <li><a asp-controller="Register" asp-action="index">Register</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!-- FOOTER -->
</body>


